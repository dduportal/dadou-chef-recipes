server {

    listen 80 default_server;
    server_name _;
    access_log <%= @service_root_folder %>/logs/default.access.log;

    server_name_in_redirect off;

    root  <%= @docroot %>;
    index index.html;
    charset utf-8;

    # deny access to .htaccess files, if Apache's document root
    # concurs with nginx's one
    location ~ /\.ht {
        deny  all;
    }
}
