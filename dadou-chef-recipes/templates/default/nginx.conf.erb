
user <%= @nginx_user %> <%= @nginx_group %>;
worker_processes  1;

error_log  <%= @service_root_folder %>/logs/errors  info;

pid        <%= @service_root_folder %>/logs/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  test/html;

    server_names_hash_bucket_size 128;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  <%= @service_root_folder %>/logs/access  main;

    sendfile        on;

    keepalive_timeout  65;

    <% if @has_upstreams -%>
    # Upstreams definitions
    include upstream.conf;
    <% end -%>

    include <%= @service_root_folder %>/vhosts/*.conf;
}
